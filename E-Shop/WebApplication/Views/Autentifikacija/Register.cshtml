@{
    ViewData["Title"] = "Registracija";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5 card p-4 shadow">
        <h2 class="text-center">Novi Račun</h2>
        <hr />
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }
        <form asp-action="Register" method="post">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label>Ime</label>
                    <input name="ime" class="form-control" required />
                </div>
                <div class="col-md-6 mb-3">
                    <label>Prezime</label>
                    <input name="prezime" class="form-control" required />
                </div>
            </div>
            <div class="form-group mb-3">
                <label>Email</label>
                <input name="email" type="email" class="form-control" required />
            </div>
            <div class="form-group mb-3">
                <label>Lozinka</label>
                <input name="lozinka" type="password" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-success w-100">Kreiraj račun</button>
            <a asp-action="Login" class="btn btn-link w-100 mt-2">Već imate račun? Prijavite se</a>
        </form>
    </div>
</div>