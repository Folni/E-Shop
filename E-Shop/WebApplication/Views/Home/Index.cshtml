@model IEnumerable<WebApplication.DTOs.ProizvodDTO>

@{
    ViewData["Title"] = "Početna - Trgovina";
}

<h1 class="my-4 text-center">Naša Ponuda</h1>

@* Gornji dio: Search i Košarica *@
<div class="row justify-content-center mb-5">
    <div class="col-md-8">
        <div class="d-flex gap-2">
            <form id="searchForm" asp-action="Index" method="get" class="flex-grow-1">
                <div class="input-group shadow-sm">
                    <input type="text" name="searchString" id="searchString" class="form-control"
                           placeholder="Pretraži proizvode (naziv ili opis)..." value="@ViewBag.SearchString" />
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i> Traži
                    </button>
                </div>
            </form>

            <a asp-controller="Kosarica" asp-action="Index" class="btn btn-warning shadow-sm d-flex align-items-center">
                <i class="bi bi-cart-fill me-2"></i>
                <span>Pregledaj košaricu</span>
            </a>
        </div>
    </div>
</div>

@* Glavni kontejner
*@
<div id="productContainer">
    @await Html.PartialAsync("_ProizvodiPartial", Model)
</div>

@section Scripts {
    <script>
        function loadPage(page) {
            const searchInput = document.getElementById('searchString').value;
            const url = `@Url.Action("Index", "Home")?pg=${page}&searchString=${encodeURIComponent(searchInput)}`;

            document.getElementById('productContainer').style.opacity = '0.5';

            fetch(url, {
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.text())
            .then(html => {
                const container = document.getElementById('productContainer');
                container.innerHTML = html;
                container.style.opacity = '1';

                window.scrollTo({ top: 150, behavior: 'smooth' });
            })
            .catch(err => {
                console.error('Greška pri učitavanju stranice:', err);
                document.getElementById('productContainer').style.opacity = '1';
            });
        }

        // AJAX pretraga na submit forme
        document.getElementById('searchForm').addEventListener('submit', function(e) {
            e.preventDefault();
            loadPage(1);
        });
    </script>
}