@model IEnumerable<WebApplication.DTOs.ProizvodDTO>

<div class="row">
    @if (!Model.Any())
    {
        <div class="col-12 text-center">
            <p class="text-muted">Trenutno nema proizvoda koji odgovaraju vašoj pretrazi.</p>
        </div>
    }

    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h5 class="card-title text-truncate" style="max-width: 70%;">@item.Naziv</h5>
                        @* Kategorija *@
                        <span class="badge bg-secondary">@item.KategorijaNaziv</span>
                    </div>

                    @* Opis proizvoda *@
                    <p class="card-text text-muted small" style="height: 50px; overflow: hidden;">@item.Opis</p>

                    @* Prikaz država (ako ih ima u DTO-u) *@
                    <div class="mb-3">
                        <small class="text-muted d-block mb-1">Dostupno u:</small>
                        @if (item.DrzaveNazivi != null && item.DrzaveNazivi.Any())
                        {
                            @foreach (var dNaziv in item.DrzaveNazivi)
                            {
                                <span class="badge bg-info text-dark me-1" style="font-size: 0.75rem;">@dNaziv</span>
                            }
                        }
                        else
                        {
                            <span class="text-muted small">Nije definirana dostupnost</span>
                        }
                    </div>

                    @* Cijena *@
                    <h4 class="text-primary mt-auto">@item.Cijena.ToString("N2") €</h4>
                </div>

                @* Gumb za dodavanje u košaricu *@
                <div class="card-footer bg-white border-top-0 pb-3">
                    <form asp-controller="Kosarica" asp-action="Dodaj" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="proizvodId" value="@item.ProizvodId" />
                        <button type="submit" class="btn btn-outline-success w-100">
                            <i class="bi bi-cart-plus"></i> Dodaj u košaricu
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

@* Navigacijski gumbi (ostaju unutar partiala radi AJAX osvježavanja 'active' klase) *@
<div class="d-flex justify-content-center mt-4">
    <nav>
        <ul class="pagination shadow-sm">
            @* Prethodna *@
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="javascript:void(0)" onclick="loadPage(@(ViewBag.CurrentPage - 1))">Prethodna</a>
            </li>

            @* Brojevi stranica *@
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" href="javascript:void(0)" onclick="loadPage(@i)">@i</a>
                </li>
            }

            @* Sljedeća *@
            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" href="javascript:void(0)" onclick="loadPage(@(ViewBag.CurrentPage + 1))">Sljedeća</a>
            </li>
        </ul>
    </nav>
</div>