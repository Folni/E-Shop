<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Trgovina</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-cart4"></i> E-Trgovina
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i> Početna
                            </a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark fw-bold" asp-area="" asp-controller="Proizvodi" asp-action="Index">📦 Proizvodi</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark fw-bold" asp-area="" asp-controller="Narudzbe" asp-action="AdminPregled">📋 Narudžbe</a>
                                </li>
                            }
                        }
                    </ul>

                    @* Desna strana navigacije *@
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            @* NOVO: Link na Profilnu stranicu (AJAX Ishod 5) *@
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Autentifikacija" asp-action="Profil">
                                    <i class="bi bi-person-circle"></i> Moj Profil (@User.Identity.Name)
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-area="" asp-controller="Autentifikacija" asp-action="Logout">
                                    <i class="bi bi-box-arrow-right"></i> Odjava
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-primary fw-bold" asp-area="" asp-controller="Autentifikacija" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Prijava
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-secondary" asp-area="" asp-controller="Autentifikacija" asp-action="Register">Registracija</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container text-center py-3">
            &copy; 2026 - <strong>E-Trgovina</strong> - Sustav za upravljanje narudžbama
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>